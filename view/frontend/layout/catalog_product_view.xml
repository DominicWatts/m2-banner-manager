<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="right">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.catalog.sidebar.right.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-sidebar-right-top</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.catalog.sidebar.right.bottom">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-sidebar-right-bottom</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.product.sidebar.right.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">product-sidebar-right-top</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.product.sidebar.right.bottom">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">product-sidebar-right-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.catalog.sidebar.left.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-sidebar-left-top</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.catalog.sidebar.left.bottom">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-sidebar-left-bottom</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.product.sidebar.left.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">product-sidebar-left-top</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.product.sidebar.left.bottom">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">product-sidebar-left-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.catalog.page.bottom">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-page-bottom</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.product.page.bottom">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">product-page-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.catalog.content.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-content-top</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.product.content.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">product-content-top</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceBlock name="header.container">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.catalog.menu.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-menu-top</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.product.menu.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">product-menu-top</argument>
                </action>
            </block>
        </referenceBlock>
        <referenceBlock name="page.top">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.catalog.menu.bottom" >
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-menu-bottom</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.product.menu.bottom" >
                <action method="setPosition">
                    <argument name="position" xsi:type="string">product-menu-bottom</argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>
