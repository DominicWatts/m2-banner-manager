<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="right">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.sidebar.right.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">sidebar-right-top</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.sidebar.right.bottom">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">sidebar-right-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.sidebar.left.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">sidebar-left-top</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.sidebar.left.bottom">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">sidebar-left-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.page.bottom">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">page-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.content.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">content-top</argument>
                </action>
            </block>
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.note.all.site">
                <action method="setPositionNote" />
            </block>
        </referenceContainer>
        <referenceBlock name="header.container">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.menu.top"  before="-" >
                <action method="setPosition">
                    <argument name="position" xsi:type="string">menu-top</argument>
                </action>
            </block>
        </referenceBlock>
        <referenceBlock name="page.top">
            <block class="Xigen\Bannermanager\Block\Bannermanager" name="bannermanager.menu.bottom" >
                <action method="setPosition">
                    <argument name="position" xsi:type="string">menu-bottom</argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>
